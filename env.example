# ===========================================
# InternHub Environment Variables
# ===========================================
# Copy this file to .env and fill in your actual values
# Never commit the actual .env file to version control

# ===========================================
# Database Configuration
# ===========================================
# MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/internhub?retryWrites=true&w=majority

# ===========================================
# Server Configuration
# ===========================================
# Port for the backend server (default: 5000)
PORT=5000

# Frontend URL for CORS and email links (default: http://localhost:3000)
FRONTEND_URL=http://localhost:3000

# Backend URL for frontend API calls (default: http://localhost:5000)
REACT_APP_BACKEND_URL=http://localhost:5000

# ===========================================
# Authentication & Security
# ===========================================
# JWT secret for token signing (use a strong, random string)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# ===========================================
# Cloudinary Configuration (for file uploads)
# ===========================================
# Get these from your Cloudinary dashboard
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ===========================================
# Email Configuration (SendGrid)
# ===========================================
# SendGrid API key for sending emails
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Email sender address (default: noreply@internhub.com)
EMAIL_FROM=noreply@internhub.com

# ===========================================
# Admin Configuration (for createAdmin.js script)
# ===========================================
# Admin username (default: admin)
ADMIN_USERNAME=admin

# Admin password (CHANGE THIS for production!)
ADMIN_PASSWORD=your_secure_admin_password_here

# ===========================================
# Optional: Additional Configuration
# ===========================================
# Node environment (development/production)
NODE_ENV=development

# ===========================================
# How to get these values:
# ===========================================
# 1. MongoDB Atlas: Create a free cluster at https://cloud.mongodb.com
# 2. Cloudinary: Sign up at https://cloudinary.com and get credentials from dashboard
# 3. SendGrid: Sign up at https://sendgrid.com and get API key from settings
# 4. JWT_SECRET: Generate a random string (you can use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
# =========================================== 